<link rel="stylesheet" href="/asset/css/pages/account/login.css">
<div id="loading">
  <img src='asset/images/load_webnode.gif' id="gifload" style="width: 60px; position: relative; top: 50%; left: 50%;" alt="">
</div>
<div class="login-form">
  <form method="post" id="loginFrm" >
    <div class="titleLogin">Login</div>
    <div class="form-group">
      <label class="m-bottom-10">Email:</label>
      <input type="text" class="form-control p-left-10" name="email" value=<%= email %>>
    </div>
    <div class="form-group">
      <label class="m-bottom-10">Password:</label>
      <input type="password" class="form-control p-left-10" name="password">
    </div>
    <p id="errorMessage" class="error-message m-bottom-10"><%- message %></p>
    <div class="form-group text-center m-bottom-20">
      <button type="submit" id="loginButton">Login</button>
    </div>
  </form>
</div>
<%- contentFor('pageTitle') %>
Login